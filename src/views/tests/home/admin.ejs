<%- layout('layouts/main.ejs', {tipoUsuario: tipoUsuario}) %>

<div class="row" style="margin-top: 2%;">
    <div class="card bg-c-blue order-card">
        <div class="card-block">
            <h1 class="display-1">BIENVENIDO</h1>
            <i>
                <p class="lead">
                    a la página de inicio de administrador <%= nombre %>
                </p>
            </i>
            <h6><%= email %></h6>
        </div>
    </div>
</div>

<div class="row">
    <h1 class="display-6"><i class="bi bi-info-circle-fill" style="color: #449cfc;"></i> Rápida información</h1>
    <div class="container py-4">
        <table
            id="tesis"
            class="table table-striped table-bordered dt-responsive nowrap"
            style="width: 100%"
        >
            <thead>
            <tr>
                <th># Propuestas</th>
                <th># Tésis</th>
            </tr>
            <tr>
                <td><%= numeroPropuestas %></td>
                <td><%= numeroTesis %></td>
            </tr>
            </thead>
        </table>
    </div>
</div>

<div class="row">
    <h1 class="display-6"><i class="bi bi-lightning-charge-fill" style="color: #449cfc;"></i> Rápido acceso</h1>
</div>
<div class="row">
    <div class="card-deck-wrapper">
        <div class="card-deck">
            <div class="card bg-info p-2">
                <a class="card-block stretched-link text-decoration-none text-white text-center" href>
                    <h1><i class="bi bi-journal"></i></h1>
                    <h4 class="card-title ">Propuestas</h4>
                    <p class="card-text">Revise y edite las propuestas de tesis enviadas por los estudiantes</p>
                </a>
            </div>
            <div class="card bg-info p-2">
                <a class="card-block stretched-link text-decoration-none text-white text-center" href="/">
                    <h1><i class="bi bi-journal-check"></i></h1>
                    <h4 class="card-title">Propuestas y tesis</h4>
                    <p class="card-text">Revise y edite propuestas y tesis enviadas</p>
                </a>
            </div>
            <div class="card bg-info p-2">
                <a class="card-block stretched-link text-decoration-none text-white text-center" href>
                    <h1><i class="bi bi-journal-arrow-up"></i></h1>
                    <h4 class="card-title">Nueva</h4>
                    <p class="card-text">Cree una nueva propuesta o tesis</p>
                </a>
            </div>
        </div>
    </div>
</div>