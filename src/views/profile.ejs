<%- layout('layouts/main', {tipoUsuario: tipoUsuario}) %>

    <style>
        .gray-text {
            color: #636363;
        }
    </style>

    <div class="modal fade" id="informacionTesis" tabindex="-1" aria-labelledby="informacionTesisLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="informacionTesisLabel">
                        <b>Información de la tesis</b>
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <form action="#">
                        <div class="form-group">
                            <label for="inputIdentificador">Identificador/Número de Tesis</label>
                            <input type="text" class="form-control" id="inputIdentificador" name="numero" value=""
                                readonly />
                        </div>
                        <div class="form-group mt-4">
                            <label for="inputTitulo">Título</label>
                            <input type="text" class="form-control" id="inputTitulo" name="titulo" readonly />
                            <div class="invalid-feedback">Campo necesario</div>
                        </div>
                        <div class="form-group mt-4">
                            <label for="inputEscuela">Escuela</label>
                            <input type="text" class="form-control" id="inputEscuela" name="escuela" readonly />
                        </div>
                        <div class="form-group mt-4">
                            <label for="inputIntegrantes">Integrantes</label><br />
                            <input type="text" class="form-control mt-1" id="inputIntegrantes" name="integrantes"
                                readonly />
                        </div>
                        <div class="form-group mt-4">
                            <label for="inputDirectores">Directores</label><br />
                            <input type="text" class="form-control mt-1" id="inputDirectores"
                                placeholder="Ingrese los nombre de los directores" name="directores" readonly />
                        </div>
                        <div class="form-group mt-4">
                            <label for="inputSinodales">Sinodales</label><br />
                            <input type="text" class="form-control mt-1" id="inputSinodales" name="sinodales"
                                readonly />
                        </div>
                        <div class="form-group mt-4">
                            <label for="inputPalabrasClave">Palabras Clave</label><br />
                            <input type="text" class="form-control mt-1" id="inputPalabrasClave" name="palabrasClave"
                                readonly />
                        </div>
                        <div class="form-group mt-4">
                            <label for="inputFecha">Fecha de registro</label><br />
                            <input type="text" class="form-control mt-1" id="inputFecha" name="palabrasClave"
                                readonly />
                        </div>
                        <div class="form-group mt-4">
                            <a id="linkDocumento" target="_blank" href="" class="btn btn-primary">Ver documento
                                completo</a>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Cerrar
                    </button>
                    <button onClick="cerrarInfoTesis()" type="button" class="btn btn-secondary ml-5" data-bs-dismiss="modal">
                        Volver
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="referencias" tabindex="-1" aria-labelledby="referenciasLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="referenciasLabel">
                        <b>Información de la tesis</b>
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <form action="#">
                        <textarea class="form-control" id="referenciasTextArea" rows="10" disabled></textarea>
                    </form>
                    <button type="button" class="btn btn-secondary mt-4" onclick="copyToClipboard()">
                        Copiar texto al portapapeles <i class="fas fa-copy"></i>
                    </button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Cerrar
                    </button>
                    <button onClick="cerrarReferencias()" type="button" class="btn btn-secondary ml-5" data-bs-dismiss="modal">
                        Volver
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="lista" tabindex="-1" aria-labelledby="lista" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="listaLabel">
                        Lista de tesis
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <div class="container py-4">
                        <table id="listaTable" class="table table-striped table-bordered dt-responsive nowrap"
                            style="width: 100%">
                            <thead>
                                <tr>
                                    <th>Título</th>
                                    <th>Ver</th>
                                    <th>Fecha</th>
                                </tr>
                            </thead>
                        </table>
                    </div class="d-flex justify-content-center">
                    <a onclick="generarLista()" data-bs-toggle="modal" data-bs-target="#referencias"
                        class="btn btn-sm btn-success">
                        Generar lista &nbsp <i class="far fa-list-alt"></i>
                    </a>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Cerrar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="row" style="margin-top: 2%;">
        <div class="card order-card">
            <div class="card-block">
                <h1 class="mt-4 text-primary">Bienvenido <%= user.nombre%>! </h1>
            </div>
            <div class="card-block">
                <h3 class="mt-4 text-primary">Tus listas guardadas</h3>
                <div class="container py-4">
                    <table id="listas" class="table table-striped table-bordered dt-responsive nowrap"
                        style="width: 100%">
                        <thead>
                            <tr>
                                <th>Fecha</th>
                                <th>Ver</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <script>
        var data = <%- JSON.stringify(listasUsuario) %>;
        $(document).ready(function () {
            var table = $("#listas").DataTable({
                responsive: true,
                "language": {
                    "emptyTable": "Sin resultados"
                },
                scrollX: true,
                data: data,
                columns: [
                    {
                        data: null,
                        render: function (data, type, row, meta) {
                            return `Guardada el ${data.createdAt.slice(0, 10)}`;
                        },
                    },
                    {
                        data: null,
                        render: function (data, type, row, meta) {
                            return `
                            <a 
                            id="${data._id}" 
                            onclick="mostrarLista(this.id)" 
                            data-bs-toggle="modal" 
                            data-bs-target="#lista" 
                            class="btn btn-sm btn-success">
                            <i class="fas fa-eye"></i>
                            </a>`;
                        },
                    },
                ],
            });

            var lista = $("#listaTable").DataTable({
                responsive: true,
                "language": {
                    "emptyTable": "No hay elementos en la lista"
                },
                scrollX: true,
                data: [],
                columns: [
                    {
                        data: "titulo",
                    },
                    {
                        data: null,
                        render: function (data, type, row, meta) {
                            return `
                            <a
                            id="${data.numero}"
                            onclick="mostrarInformacion(this.id)"
                            data-bs-toggle="modal" 
                            data-bs-target="#informacionTesis" 
                            class="btn btn-sm btn-success">
                            <i class="fas fa-eye"></i>
                            </a>`;
                        },
                    },
                    {
                        data: "createdAt",
                    }
                ],
            });
        });

        const cerrarReferencias = () => {
            $('#referencias').modal('toggle');
            $('#lista').modal('toggle');
        }

        const cerrarInfoTesis = () => {
            $('#informacionTesis').modal('toggle');
            $('#lista').modal('toggle');
        }

        const agregarALista = (idTesis) => {
            const table = $("#listaTable").DataTable();
            fetch("/tesis/".concat(idTesis))
                .then((response) => response.json())
                .then((tesis) => {
                    console.log(tesis)
                    table.row.add(tesis).draw(false);
                });
        }

        const mostrarLista = (idLista) => {
            const table = $("#listaTable").DataTable();
            table.rows().remove().draw(false);
            fetch("/listas/".concat(idLista))
                .then((response) => response.json())
                .then((lista) => {
                    lista.idsTesis.map((idTesis) => {
                        console.log(idTesis)
                        agregarALista(idTesis);
                    });
                });
        }

        const mostrarInformacion = async (id) => {
            $('#lista').modal('toggle');
            fetch("/tesis/".concat(id))
                .then((response) => response.json())
                .then((data) => {
                    const inputNumero = document.getElementById("inputIdentificador");
                    inputNumero.value = data.numero;
                    const inputTitulo = document.getElementById("inputTitulo");
                    inputTitulo.value = data.titulo;
                    const inputEscuela = document.getElementById("inputEscuela");
                    inputEscuela.value = data.escuela;
                    const inputDirectores = document.getElementById("inputDirectores");
                    inputDirectores.value = data.directores.join(", ");
                    const inputSinodales = document.getElementById("inputSinodales");
                    inputSinodales.value = data.sinodales.join(", ");
                    const inputPalabrasClave =
                        document.getElementById("inputPalabrasClave");
                    inputPalabrasClave.value = data.palabrasClave.join(", ");
                    const inputIntegrantes = document.getElementById("inputIntegrantes");
                    inputIntegrantes.value = data.integrantes.join(", ");
                    const inputFecha = document.getElementById("inputFecha");
                    inputFecha.value = data.createdAt;
                    const linkDocumento = document.getElementById("linkDocumento");
                    linkDocumento.href = "/propuestas/" + data.ruta;
                });
        };

        const generarLista = () => {
            $('#lista').modal('toggle');
            const table = $('#listaTable').DataTable();
            let data = table.rows().data();

            let textoReferencias = "";

            data.each(function (tesis, index) {
                textoReferencias += `[${index}] ${tesis.integrantes}. (${tesis.titulo}). (${tesis.numero}) [Tesis para titulación como Ingeniero en Sistemas Computacionales, ${tesis.escuela}] Sapyentia.\n`;
            });

            document.getElementById('referenciasTextArea').value = textoReferencias;
        }

        const copyToClipboard = () => {
            const textoReferencias = document.getElementById('referenciasTextArea');
            textoReferencias.select();

            navigator.clipboard.writeText(textoReferencias.value)
        }

    </script>