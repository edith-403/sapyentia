<%- layout('layouts/main.ejs') %>

<div
  class="modal fade"
  id="informacionTesis"
  tabindex="-1"
  aria-labelledby="informacionTesisLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="informacionTesisLabel">
          <b>Información de la tesis</b>
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Cerrar"
        ></button>
      </div>
      <div class="modal-body">
        <form action="#">
          <div class="form-group">
            <label for="inputIdentificador"
              >Identificador/Número de Tesis</label
            >
            <input
              type="text"
              class="form-control"
              id="inputIdentificador"
              name="numero"
              value=""
              readonly
            />
          </div>
          <div class="form-group mt-4">
            <label for="inputTitulo">Título</label>
            <input
              type="text"
              class="form-control"
              id="inputTitulo"
              name="titulo"
              readonly
            />
            <div class="invalid-feedback">Campo necesario</div>
          </div>
          <div class="form-group mt-4">
            <label for="inputEscuela">Escuela</label>
            <input
              type="text"
              class="form-control"
              id="inputEscuela"
              name="escuela"
              readonly
            />
          </div>
          <div class="form-group mt-4">
            <label for="inputIntegrantes">Integrantes</label><br />
            <input
              type="text"
              class="form-control mt-1"
              id="inputIntegrantes"
              name="integrantes"
              readonly
            />
          </div>
          <div class="form-group mt-4">
            <label for="inputDirectores">Directores</label><br />
            <input
              type="text"
              class="form-control mt-1"
              id="inputDirectores"
              placeholder="Ingrese los nombre de los directores"
              name="directores"
              readonly
            />
          </div>
          <div class="form-group mt-4">
            <label for="inputSinodales">Sinodales</label><br />
            <input
              type="text"
              class="form-control mt-1"
              id="inputSinodales"
              name="sinodales"
              readonly
            />
          </div>
          <div class="form-group mt-4">
            <label for="inputPalabrasClave">Palabras Clave</label><br />
            <input
              type="text"
              class="form-control mt-1"
              id="inputPalabrasClave"
              name="palabrasClave"
              readonly
            />
          </div>
          <div class="form-group mt-4">
            <label for="inputFecha">Fecha de registro</label><br />
            <input
              type="text"
              class="form-control mt-1"
              id="inputFecha"
              name="palabrasClave"
              readonly
            />
          </div>
          <div class="form-group mt-4">
            <a
              id="linkDocumento"
              target="_blank"
              href=""
              class="btn btn-primary"
              >Ver documento completo</a
            >
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>

<div
  class="modal fade"
  id="referencias"
  tabindex="-1"
  aria-labelledby="referenciasLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="referenciasLabel">
          <b>Información de la tesis</b>
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Cerrar"
        ></button>
      </div>
      <div class="modal-body">
        <form action="#">
            <textarea class="form-control" id="referenciasTextArea" rows="10" disabled></textarea>
        </form>
        <button type="button" class="btn btn-secondary mt-4" onclick="copyToClipboard()">
            Copiar texto al portapapeles  <i class="fas fa-copy"></i>
          </button>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>

<div class="card mt-4">
  <div class="card-header">
    <h5 class="card-title">Filtros de búsqueda.</h5>
  </div>
  <div class="card-body">
    <form
      action="/view/tesis"
      method="post"
      enctype="multipart/form-data"
      class="needs-validation"
      novalidate
    >
      <div class="form-group mt-4">
        <label for="filtroIdentificador">Número de tesis</label>
        <input
          type="text"
          class="form-control"
          id="filtroIdentificador"
          placeholder="Búsque por el número de tesis"
          name="numero"
        />
      </div>
      <div class="form-group mt-4">
        <label for="filtroTitulo">Título</label>
        <input
          type="text"
          class="form-control"
          id="filtroTitulo"
          placeholder="Búsque por el título de la tesis"
          name="titulo"
        />
      </div>
      <div class="form-group mt-4">
        <label for="filtroEscuela">Escuela</label>
        <input
          type="text"
          class="form-control"
          id="filtroEscuela"
          placeholder="Búsque por el nombre de la escuela"
          name="escuela"
        />
      </div>
      <div class="form-group mt-4">
        <label for="filtroIntegrantes">Integrantes</label><br />
        <small id="indicacionIntegrantes" class="form-text text-muted">
          Ingresa el nombre de los participantes.<br />
          Escriba el nombre o nombres de los integrantes separados por coma. Ej.
          Juan Manuel Vazquez, Luis Daniel Cervantes Montes, ...
        </small>
        <input
          type="text"
          class="form-control mt-1"
          id="filtroIntegrantes"
          placeholder="Búsque por los nombres de los integrantes"
          name="integrantes"
        />
      </div>
      <div class="form-group mt-4">
        <label for="filtroDirectores">Directores</label><br />
        <small id="indicacionDirectores" class="form-text text-muted">
          Ingresa el nombre del o de los directores.<br />
          Escriba el nombre o nombres de los directores separados por coma. Ej.
          Jorge Luis Rosas Trigueros, Miguel Abel Contreras Sanchez, ...
        </small>
        <input
          type="text"
          class="form-control mt-1"
          id="filtroDirectores"
          placeholder="Búsque por los nombres de los directores"
          name="directores"
        />
      </div>
      <div class="form-group mt-4">
        <label for="filtroSinodales">Sinodales</label><br />
        <small id="indicacionSinodales" class="form-text text-muted">
          Ingresa el nombre del o de los sinodales.<br />
          Escriba el nombre o nombres de los sinodales separados por coma. Ej.
          Jorge Luis Rosas Trigueros, Miguel Abel Contreras Sanchez, ...
        </small>
        <input
          type="text"
          class="form-control mt-1"
          id="filtroSinodales"
          placeholder="Búsque por los nombres de los directores"
          name="sinodales"
        />
      </div>
      <div class="form-group mt-4">
        <label for="filtroPalabrasClave">Palabras Clave</label><br />
        <small id="indicacionPalabrasClave" class="form-text text-muted">
          Escriba las palabras clave, separadas por comas. Ej. Biología,
          Inteligencia Artificial, Redes Neuronales, ...
        </small>
        <input
          type="text"
          class="form-control mt-1"
          id="filtroPalabrasClave"
          placeholder="Búsque por las palabras clave"
          name="palabrasClave"
        />
      </div>
      <div class="form-group mt-4">
        <label>Rango de fechas</label><br />
        <small id="indicacionFiltroFecha" class="form-text text-muted">
          Ingrese el rango de fechas para buscar tesis.
        </small>
        <div class="container mt-4">
          <div class="row">
            <div class="col-sm mr-auto">
              Desde &nbsp;
              <input
                type="date"
                class="mt-1"
                id="filtroFechaInicio"
                name="fechaInicio"
              />
            </div>
          </div>
          <div class="row">
            <div class="col-sm mr-auto">
              Hasta &nbsp;
              <input
                type="date"
                class="mt-1"
                id="filtroFechaFin"
                name="fechaFin"
              />
            </div>
          </div>
        </div>
      </div>
      <button
        id="buscar"
        type="button"
        onclick="getInfo()"
        class="btn btn-primary mt-4"
      >
        Buscar &nbsp <i class="fas fa-search"></i>
      </button>
    </form>
  </div>
</div>

<div class="card mt-4">
  <div class="card-header">
    <h5 class="card-title"><b>Resultados.</b></h5>
  </div>
  <div class="card-body">
    <div class="container py-4">
      <table
        id="tesis"
        class="table table-striped table-bordered dt-responsive nowrap"
        style="width: 100%"
      >
        <thead>
          <tr>
            <th>Añadir</th>
            <th>Número</th>
            <th>Título</th>
            <th>Ver</th>
            <th>Fecha</th>
            <th>Palabras Clave</th>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</div>

<div class="card mt-4 mb-5">
  <div class="card-header">
    <h5 class="card-title"><b>Lista de tesis.</b></h5>
  </div>
  <div class="card-body">
    <div class="container py-4">
      <table
        id="lista"
        class="table table-striped table-bordered dt-responsive nowrap"
        style="width: 100%"
      >
        <thead>
          <tr>
            <th>Remover</th>
            <th>Número</th>
            <th>Título</th>
            <th>Ver</th>
            <th>Fecha</th>
            <th>Palabras Clave</th>
          </tr>
        </thead>
      </table>
    </div class="d-flex justify-content-center">
    <a onclick="generarLista()" data-bs-toggle="modal" data-bs-target="#referencias"
        class="btn btn-sm btn-success">
        Generar lista &nbsp <i class="far fa-list-alt"></i>
    </a>
  </div>
</div>
</div>

<script>
  // Configurando fechas por defecto de los campos
  document.getElementById("filtroFechaInicio").defaultValue = "1900-01-01";
  document.getElementById("filtroFechaFin").defaultValue = getTodayDate();

  // Guardara los valores no repetidos de las tesis agregadas a la lista
  let elementosLista = new Set()

  const generarLista = () => {
    const table = $('#lista').DataTable();
    let data = table.rows().data();

    let textoReferencias = "";

    data.each(function (tesis, index) {
        console.log(JSON.stringify(tesis))
        textoReferencias += `[${index}] ${tesis.integrantes}. (${tesis.titulo}). (${tesis.numero}) [Tesis para titulación como Ingeniero en Sistemas Computacionales, ${tesis.escuela}] Sapyentia.\n`;
    });

    document.getElementById('referenciasTextArea').value = textoReferencias;
  }

  const copyToClipboard = () => {
      const textoReferencias = document.getElementById('referenciasTextArea');
      textoReferencias.select();

      navigator.clipboard.writeText(textoReferencias.value)
  }

  const recolectarFiltros = () => {
    const filtroNumero = document.getElementById("filtroIdentificador").value;
    const filtroTitulo = document.getElementById("filtroTitulo").value;
    const filtroEscuela = document.getElementById("filtroEscuela").value;
    const filtroDirectores = document.getElementById("filtroDirectores").value;
    const filtroSinodales = document.getElementById("filtroSinodales").value;
    const filtroPalabrasClave = document.getElementById(
      "filtroPalabrasClave"
    ).value;
    const filtroIntegrantes =
      document.getElementById("filtroIntegrantes").value;
    const filtroFechaInicio =
      document.getElementById("filtroFechaInicio").value;
    const filtroFechaFin = document.getElementById("filtroFechaFin").value;

    return {
      numero: filtroNumero,
      titulo: filtroTitulo,
      escuela: filtroEscuela,
      integrantes: filtroIntegrantes,
      directores: filtroDirectores,
      sinodales: filtroSinodales,
      palabrasClave: filtroPalabrasClave,
      integrantes: filtroIntegrantes,
      fechaInicio: filtroFechaInicio,
      fechaFin: filtroFechaFin,
    };
  };

  const agregarALista = (idTesis) => {
    if (elementosLista.has(idTesis)) return;
    const table = $("#lista").DataTable();
    fetch("/tesis/".concat(idTesis))
      .then((response) => response.json())
      .then((tesis) => {
        console.log(tesis.numero)
        table.row.add(tesis).draw(false);
        elementosLista.add(tesis.numero)
      });
  }

  function removerElemento (idTesis) {
    const table = $("#lista").DataTable();
    let button = $('#'+idTesis)
    var row = table.row( $(this).parents('tr') ).remove().draw();
  }

  const getInfo = () => {
    var url = "/tesis";
    var data = recolectarFiltros();
    const table = $("#tesis").DataTable();
    fetch(url, {
      method: "POST", // or 'PUT'
      body: JSON.stringify(data), // data can be `string` or {object}!
      headers: {
        "Content-Type": "application/json",
      },
    })
      .then((res) => res.json())
      .then((data) => {
        table.rows().remove().draw(false);
        data.forEach((tesis) => {
          const date = new Date(tesis.createdAt);
          tesis.createdAt = date.toISOString().slice(0, 10);
          tesis.palabrasClave = tesis.palabrasClave.join(", ")
          table.row.add(tesis).draw(false);
        });
      })
      .catch((error) => console.error("Error:", error))
      .then((response) => console.log("Success:", response));
  };

  const mostrarInformacion = async (id) => {
    fetch("/tesis/".concat(id))
      .then((response) => response.json())
      .then((data) => {
        console.log(data)
        const inputNumero = document.getElementById("inputIdentificador");
        inputNumero.value = data.numero;
        const inputTitulo = document.getElementById("inputTitulo");
        inputTitulo.value = data.titulo;
        const inputEscuela = document.getElementById("inputEscuela");
        inputEscuela.value = data.escuela;
        const inputDirectores = document.getElementById("inputDirectores");
        inputDirectores.value = data.directores.join(", ");
        const inputSinodales = document.getElementById("inputSinodales");
        inputSinodales.value = data.sinodales.join(", ");
        const inputPalabrasClave =
          document.getElementById("inputPalabrasClave");
        inputPalabrasClave.value = data.palabrasClave.join(", ");
        const inputIntegrantes = document.getElementById("inputIntegrantes");
        inputIntegrantes.value = data.integrantes.join(", ");
        const inputFecha = document.getElementById("inputFecha");
        inputFecha.value = data.createdAt;
        const linkDocumento = document.getElementById("linkDocumento");
        linkDocumento.href = "/propuestas/" + data.ruta;
      });
  };

  // Se obtiene la fecha del dia en el formato adecuado
  function getTodayDate() {
    let fechaActual = new Date();
    fechaActual.setDate(fechaActual.getDate() + 1);
    return fechaActual.toLocaleDateString("en-CA", {
      year: "numeric",
      month: "2-digit",
      day: "2-digit",
    });
  }

  $(document).ready(function () {
    //Enlazando tabla con datos AJAX
    var lista = $("#lista").DataTable({
      responsive: true,
      "language": {
        "emptyTable": "No hay elementos en la lista"
      },
      scrollX: true,
      data: [],
      columns: [
      {
          data: null,
          render: function (data, type, row, meta) {
            return `
                <a
                  id="${data.numero}"
                  class="remover btn btn-sm btn-success">
                  <i class="fas fa-trash-alt"></i>
                </a>`;
          },
        },
        {
          data: "numero",
        },
        {
          data: "titulo",
        },
        {
          data: null,
          render: function (data, type, row, meta) {
            return `
                <a
                  id="${data.numero}"
                  onclick="mostrarInformacion(this.id)"
                  data-bs-toggle="modal"
                  data-bs-target="#informacionTesis"
                  class="btn btn-sm btn-success">
                  <i class="fas fa-eye"></i>
                </a>`;
          },
        },
        {
          data: "createdAt",
        },
        {
          data: "palabrasClave",
        },
      ],
    });
    var table = $("#tesis").DataTable({
      responsive: true,
      "language": {
        "emptyTable": "Sin resultados"
      },
      scrollX: true,
      data: [],
      columns: [
        {
          data: null,
          render: function (data, type, row, meta) {
            return `
                <a
                  id="${data.numero}"
                  onclick="agregarALista(this.id)"
                  class="btn btn-sm btn-success">
                  <i class="fas fa-plus"></i>
                </a>`;
          },
        },
        {
          data: "numero",
        },
        {
          data: "titulo",
        },
        {
          data: null,
          render: function (data, type, row, meta) {
            return `
                <a
                  id="${data.numero}"
                  onclick="mostrarInformacion(this.id)"
                  data-bs-toggle="modal"
                  data-bs-target="#informacionTesis"
                  class="btn btn-sm btn-success">
                  <i class="fas fa-eye"></i>
                </a>`;
          },
        },
        {
          data: "createdAt",
        },
        {
          data: "palabrasClave",
        },
      ],
    });
  });

  $('#lista').on('click', '.remover', function () {
		var table = $('#lista').DataTable();
    const numero = table.row($(this).parents('tr')).data().numero
    elementosLista.delete(numero)
		table
			.row($(this).parents('tr'))
			.remove()
		  .draw();
		});
</script>
